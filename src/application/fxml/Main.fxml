<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<!-- 主框架界面 -->

<BorderPane fx:id="root" style="-fx-background-color: #aaa;"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.control.MainController">
	<center>
		<Pagination fx:id="mPagination"
			BorderPane.alignment="CENTER">
			<effect>
				<InnerShadow radius="2" />
			</effect>
		</Pagination>
	</center>
	<bottom>
		<StackPane prefHeight="40.0" BorderPane.alignment="CENTER">
			<children>
				<FlowPane fx:id="bottomGroupPane" alignment="CENTER_RIGHT"
					style="-fx-background-color:linear-gradient(to right, #909090 0.0%,#A5A2A2 40.0%,#A5A2A2 60.0%, #909090 100.0%);-fx-padding: 10;"
					prefHeight="30.0" prefWidth="200.0">
					<children>
						<Label text="Made by UAV-TIR Team"
							style="-fx-text-fill: #ffffff; -fx-font-size:15;">
							<effect>
								<DropShadow color="#FAFAFA" radius="10" />
							</effect>
						</Label>
					</children>
				</FlowPane>
			</children>
			<children>
				<BorderPane prefHeight="40.0" fx:id="bottomBtnsPane"
					style="-fx-background-color: #FAFAFA;-fx-padding: 10;"
					BorderPane.alignment="CENTER">
					<left>
						<JFXButton fx:id="btn_pre" buttonType="RAISED"
							onAction="#leftBtn" text="%pre_step"
							BorderPane.alignment="CENTER">
							<graphic>
								<ImageView fitHeight="16.0" fitWidth="16.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="/resources/arrow-left.png" />
									</image>
								</ImageView>
							</graphic>
							<styleClass>
								<String fx:value="btn-level-vip" />
							</styleClass>
						</JFXButton>
					</left>
					<right>
						<JFXButton fx:id="btn_next" buttonType="RAISED"
							onAction="#rightBtn" text="%next_step"
							BorderPane.alignment="CENTER">
							<styleClass>
								<String fx:value="btn-level-vip" />
							</styleClass>
						</JFXButton>
					</right>
				</BorderPane>
			</children>
		</StackPane>
	</bottom>
</BorderPane>
