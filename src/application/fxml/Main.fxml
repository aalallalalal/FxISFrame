<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<?import javafx.scene.effect.*?>

<!-- 主框架界面 -->

<BorderPane fx:id="root" style="-fx-background-color: #aaa;"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.control.MainController">
	<center>
		<Pagination fx:id="mPagination"
			BorderPane.alignment="CENTER">
			<effect>
				<InnerShadow radius="2" />
			</effect>
		</Pagination>
	</center>
	<bottom>
		<StackPane prefHeight="45.0" BorderPane.alignment="CENTER">
			<children>
				<FlowPane fx:id="bottomGroupPane" alignment="CENTER_RIGHT"
					style="-fx-background-color:  #F5F5F5;-fx-padding: 10;"
					prefHeight="200.0" prefWidth="200.0">
					<children>
						<Label text="made by *****团队"
							style="-fx-text-fill: #c5ab26; -fx-font-size:14;">
							<effect>
								<DropShadow color="#f2cd00" radius="10" />
							</effect>
						</Label>
					</children>
				</FlowPane>
			</children>
			<children>
				<BorderPane prefHeight="45.0" fx:id="bottomBtnsPane"
					style="-fx-background-color:  #F5F5F5;-fx-padding: 10;"
					BorderPane.alignment="CENTER">
					<left>
						<JFXButton fx:id="btn_pre" buttonType="RAISED"
							onAction="#leftBtn" text=" 上一步 " BorderPane.alignment="CENTER">
							<styleClass>
								<String fx:value="btn-level-vip" />
							</styleClass>
						</JFXButton>
					</left>
					<right>
						<JFXButton fx:id="btn_next" buttonType="RAISED"
							onAction="#rightBtn" text=" 下一步 " BorderPane.alignment="CENTER">
							<styleClass>
								<String fx:value="btn-level-vip" />
							</styleClass>
						</JFXButton>
					</right>
				</BorderPane>
			</children>
		</StackPane>
	</bottom>
</BorderPane>
